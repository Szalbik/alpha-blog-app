<h1 class="text-center">List of all users.</h1>

<div class="text-center">
  <%= will_paginate class: "col-md-4 col-md-offset-4" %>
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user), class: "img-circle" %></li>
          <li class="user-name"><%= link_to user.username, user_path(user) %></li>
          <li><%= pluralize(user.articles.count, "article") %></li>
        </div>
      </ul>
  <% end %>
  <%= will_paginate class: "col-md-4 col-md-offset-4 "%>
</div>
